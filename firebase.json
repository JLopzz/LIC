{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/filme{,/**}",
        "destination": "/index.html",
        "type": 301
      },
      {
        "source": "/cartelera{,/**}",
        "destination": "/index.html",
        "type": 301
      },
      {
        "source": "/admin/**",
        "destination": "/admin.html",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/admin{,/**}",
        "destination": "/admin.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
