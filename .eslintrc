{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "allowImportExportEverywhere": false,
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "classes": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": "off",
    "no-process-exit": 1,
    "no-unused-vars": 1,
    "no-useless-escape": 1,
    "no-extra-boolean-cast": 0
  }
}
